datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model BodyPart {
   id    Int     @id @default(autoincrement())
   name  String
   exercises Exercise[]
}

model Exercise {
  id    Int     @id @default(autoincrement())
  name String
  bodyPart BodyPart @relation(fields: [bodyPartId], references: [id])
  bodyPartId  Int
}
